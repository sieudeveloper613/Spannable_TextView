<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:background="@drawable/background_title_textview"
        style="@style/MyCustomTextView"
        android:text="Spannable Colored TextView"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_spannable_color"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_right"
        android:drawablePadding="16dp"
        android:text="Something here..."
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/background_title_textview"
        style="@style/MyCustomTextView"
        android:text="Spannable Font TextView"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_spannable_font"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_right"
        android:drawablePadding="16dp"
        android:text="Something here..."
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/background_title_textview"
        style="@style/MyCustomTextView"
        android:text="Spannable Typeface TextView"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_spannable_typeface"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_right"
        android:drawablePadding="16dp"
        android:text="Something here..."
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>